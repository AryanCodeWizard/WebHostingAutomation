          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated Premium Hosting\",\n  \"pricing\": {\n    \"monthly\": 39.99,\n    \"yearly\": 399.99\n  },\n  \"configOptions\": {\n    \"disk\": \"100GB SSD\",\n    \"bandwidth\": \"unlimited\",\n    \"domains\": 10\n  }\n}"
