          "raw": "{\n  \"pricing\": {\n    \"monthly\": 24.99\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/products/{{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_id}}"]
        },
        "description": "Update only the pricing of a product. Requires admin authentication."
      },
      "response": []
    },
    {
      "name": "Delete Product (Admin)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/products/{{product_id}}",
          "host": ["{{base_url}}"],
          "path": ["products", "{{product_id}}"]
        },
        "description": "Delete a product permanently. Requires admin authentication."
      },
      "response": []
    }
  ]
}
