# Database Configuration
MONGO_URI=mongodb://localhost:27017/whmcs_alternative
# or use MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/whmcs_alternative

# Server Configuration
PORT=4000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret_here

# GoDaddy API Configuration
GODADDY_API_KEY=your_godaddy_api_key_here
GODADDY_API_SECRET=your_godaddy_api_secret_here

# JWT Secret (for authentication)
JWT_SECRET=your_secure_jwt_secret_here_min_32_characters

# Email Configuration (if using Nodemailer)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password_or_app_password

# Optional: Redis Configuration (for caching/queuing)
REDIS_URL=redis://localhost:6379
